<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ul.TP_Spring_Client.controllers.SearchController">
   <children>
      <Label text="Chercher un Film">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="search" promptText="id / titre / rien" />
         </children>
      </HBox>
      <TextArea fx:id="response" editable="false" prefHeight="200.0" prefWidth="200.0" />
      <HBox alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelClick" text="Retour">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onSearchClick" text="Chercher" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
